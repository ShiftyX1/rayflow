    <Text id="subtitle" class="game-subtitle">Voxel BedWars</Text>
    
    <Panel id="menu-buttons" class="menu-buttons">
      <Button id="btn-play" action="start_game" class="menu-button">Play Game</Button>
      <Button id="btn-settings" action="open_settings" class="menu-button">Settings</Button>
      <Button id="btn-quit" action="quit_game" class="menu-button">Quit</Button>
      <Button id="btn-credits" action="view_credits" class="menu-button">Credits</Button>
    </Panel>
    
    <Text id="version" class="version-text">v0.1.0 alpha</Text>
  </Panel>
</UI>
